@{
  Layout = "_Layout";
}

<h2>Animals of type @Model["species"].GetAnimalSpecies() currently in this shelter:</h2>
@if (@Model["animals"].Count == 0)
{
  <h3>There are no animals of this species currently in this shelter.</h3>
}
<ul>
@foreach (var animal in @Model["animals"])
{
  <li><a href='/species/@Model["species"].GetId()/animal/@animal.GetId()'>@animal.GetName()</a></li>
}
</ul>

<button><a href='/species/@Model["species"].GetId()/animals/adopt'>Adopt all @Model["species"].GetAnimalSpecies()</a></button>
<button><a href='/species/@Model["species"].GetId()/animal/breed'>Order By Breed</button></a>
<a href='/species/@Model["species"].GetId()/animal/new'>Add a new animal</a>
<a href="/">Back Home</a>
<a href="/species">View all species in shelter</a>
