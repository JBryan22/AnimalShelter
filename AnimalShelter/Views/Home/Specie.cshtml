@{
  Layout = "_Layout";
}

@if (@Model.Count == 0)
{
  <h2>There are currently no animals in this shelter!</h2>
}
<ul>
@foreach (var species in Model)
{
  <li><a href="/species/@species.GetId()">@species.GetAnimalSpecies()</a></li>
}
</ul>

<button><a href="/species/delete">Kill/Adopt All Species</a></button>
<button><a href="/species/az">Order alphabetically</button>
<a href="/">Back Home</a>
